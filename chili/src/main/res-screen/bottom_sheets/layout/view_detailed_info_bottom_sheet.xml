<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_16dp"
    app:layout_constraintTop_toTopOf="@+id/ibtn_cancel"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/iv_icon"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/view_140dp"
        android:layout_height="@dimen/view_140dp"
        tools:background="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_text"
        android:textAppearance="@style/H7.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/padding_16dp"
        android:visibility="gone"
        android:layout_marginTop="@dimen/padding_24dp"
        tools:visibility="visible"
        tools:text="@tools:sample/lorem/random" />

    <Button
        android:id="@+id/btn_primary"
        style="@style/ButtonStyle.Primary"
        android:layout_marginTop="@dimen/padding_24dp"
        android:layout_marginHorizontal="@dimen/padding_16dp"
        android:visibility="gone"
        tools:text="Primary"
        tools:visibility="visible" />
</LinearLayout>