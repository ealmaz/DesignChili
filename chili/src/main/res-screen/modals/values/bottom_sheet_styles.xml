<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Chili.BottomSheetStyle" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Chili.BottomSheetModalStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

    <style name="Chili.BottomSheetModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/chili_bg_rounded_bottom_sheet</item>
    </style>

    <style name="Chili.ActionBottomSheetButtonStyle" parent="Chili.ButtonStyle.Secondary">
        <item name="android:textColor">?attr/ChiliActionBottomSheetButtonTextColor</item>
    </style>

    <style name="Chili.ActionBottomSheetAccentButtonStyle" parent="Chili.ButtonStyle.Secondary">
        <item name="android:textColor">?attr/ChiliActionBottomSheetAccentButtonTextColor</item>
    </style>

</resources>