<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_16dp"
    app:layout_constraintTop_toTopOf="@+id/ibtn_cancel"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/iv_icon"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginTop="@dimen/padding_8dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/view_64dp"
        android:layout_height="@dimen/view_64dp"
        tools:background="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_title"
        android:textAppearance="@style/Chili.H7.Primary.Bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:layout_marginHorizontal="@dimen/padding_16dp"
        android:visibility="gone"
        android:layout_marginTop="@dimen/padding_16dp"
        tools:visibility="visible"
        tools:text="Текстовый блок" />

    <TextView
        android:id="@+id/tv_desc"
        android:textAppearance="@style/Chili.H7.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_marginHorizontal="@dimen/padding_16dp"
        android:visibility="gone"
        android:layout_marginTop="@dimen/padding_16dp"
        tools:visibility="visible"
        tools:text="Текстовый блок" />

    <TextView
        android:id="@+id/tv_desc_secondary"
        android:textAppearance="@style/Chili.H8.Secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_marginHorizontal="@dimen/padding_16dp"
        android:visibility="gone"
        android:layout_marginTop="@dimen/padding_4dp"
        tools:visibility="visible"
        tools:text="Текстовый блок" />

    <Button
        android:id="@+id/btn_secondary"
        style="@style/Chili.ButtonStyle.Secondary"
        android:layout_marginTop="@dimen/padding_24dp"
        android:layout_marginHorizontal="@dimen/padding_16dp"
        android:visibility="gone"
        tools:text="Secondary"
        tools:visibility="visible" />
</LinearLayout>