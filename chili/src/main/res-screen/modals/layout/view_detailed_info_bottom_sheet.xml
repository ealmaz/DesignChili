<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_16dp">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/view_140dp"
            android:layout_height="@dimen/view_140dp"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            tools:background="@tools:sample/avatars"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/padding_16dp"
            android:layout_marginTop="@dimen/padding_24dp"
            android:textAppearance="@style/H7.Primary"
            android:visibility="gone"
            tools:text="@tools:sample/lorem/random"
            tools:visibility="visible" />

        <Button
            android:id="@+id/btn_primary"
            style="@style/ButtonStyle.Primary"
            android:layout_marginHorizontal="@dimen/padding_16dp"
            android:layout_marginTop="@dimen/padding_24dp"
            android:visibility="gone"
            tools:text="Primary"
            tools:visibility="visible" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
