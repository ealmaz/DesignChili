<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="InputViewStyle" parent="BaseChiliViewStyle">
        <item name="errorFieldBackground">?InputViewBackgroundErrorColor</item>
        <item name="fieldBackground">?InputViewBackgroundColor</item>
        <item name="hintTextColor">?InputViewHintTextColor</item>
        <item name="errorMessageTextColor">?InputViewErrorMessageTextColor</item>
        <item name="messageTextColor">?InputViewMessageTextColor</item>
    </style>


    <style name="InputViewStyle.Simple"></style>
    <style name="InputViewStyle.Masked"></style>

    <style name="InputViewStyle.Masked.PhoneMask">
        <item name="android:inputType">number</item>
        <item name="allowedInputSymbols">1234567890</item>
        <item name="mask">+996 XXX XXX XXX</item>
    </style>

    <style name="InputViewStyle.Simple.Password">
        <item name="endIconMode">password_toggle</item>
    </style>

</resources>