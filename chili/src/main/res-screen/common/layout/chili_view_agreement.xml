<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <CheckBox
        android:id="@+id/cb_agreement"
        style="@style/Chili.CheckBoxStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/padding_12dp"
        android:layout_gravity="center_vertical"
        android:checked="true" />

    <ImageView
        android:id="@+id/iv_checked"
        android:layout_width="@dimen/view_24dp"
        android:layout_height="@dimen/view_24dp"
        android:layout_marginEnd="@dimen/padding_16dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/chili_ic_checkmark"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:textAppearance="@style/Chili.H8.Primary"
        android:textColorLink="@color/magenta_1"
        tools:text="Я подтверждаю, что ознакомлен с Кредитным заявлением" />

</LinearLayout>