<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:background="@drawable/chili_card_rounded_top_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_titles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/padding_16dp"
        android:layout_marginStart="@dimen/padding_16dp"
        android:layout_marginBottom="@dimen/padding_16dp"
        android:layout_marginRight="@dimen/padding_14dp"
        app:layout_constraintRight_toLeftOf="@+id/iv_icon"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:textAppearance="@style/Chili.H7.Marked.Bold"
            tools:text="Здесь основной текст" />

        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_4dp"
            android:singleLine="false"
            android:textAppearance="@style/Chili.H9.Marked"
            android:visibility="visible"
            tools:text="Здесь дополнительный текст" />


    </LinearLayout>

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/view_48dp"
        android:layout_height="@dimen/view_48dp"
        android:visibility="visible"
        android:scaleType="centerCrop"
        tools:src="@drawable/chili_ic_attention"
        android:layout_margin="@dimen/padding_12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>