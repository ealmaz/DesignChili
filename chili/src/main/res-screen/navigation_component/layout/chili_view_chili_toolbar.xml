<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?ToolbarBackground"
    android:orientation="vertical"
    android:id="@+id/ll_root">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="?actionBarSize"
            app:titleTextAppearance="?ToolbarTextAppearance"
            tools:title="Toolbar"/>

        <TextView
            android:id="@+id/tv_additional_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/padding_16dp"
            android:textAppearance="?ToolbarAdditionalTextTextAppearance"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="Шаг 1 из 4" />

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/view_24dp"
            android:layout_height="@dimen/view_24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/padding_16dp"
            android:visibility="gone"
            app:tint="?ToolbarIconsTint"
            tools:src="@tools:sample/avatars"/>
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="?ToolbarDividerSize"
        android:background="?ToolbarDividerColor"/>

</LinearLayout>