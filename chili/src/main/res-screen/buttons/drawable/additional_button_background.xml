<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners
                android:radius="?SecondaryButtonCornerRadius"
                tools:radius="4dp"/>
            <solid
                android:color="?SecondaryButtonBackgroundDisabled"
                tools:color="@color/gray_1"/>
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners
                android:radius="?SecondaryButtonCornerRadius"
                tools:radius="4dp"/>
            <solid
                android:color="?SecondaryButtonBackgroundActive"
                tools:color="@color/gray_5"/>
        </shape>
    </item>
</selector>