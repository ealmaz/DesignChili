<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners
                android:radius="?attr/ChiliPrimaryButtonCornerRadius"
                tools:radius="4dp"/>
            <solid
                android:color="?attr/ChiliPrimaryButtonBackgroundDisabled"
                tools:color="@color/green_3"/>
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners
                android:radius="?attr/ChiliPrimaryButtonCornerRadius"
                tools:radius="4dp"/>
            <solid
                android:color="?attr/ChiliPrimaryButtonBackgroundActive"
                tools:color="@color/green_1"/>
        </shape>
    </item>
</selector>