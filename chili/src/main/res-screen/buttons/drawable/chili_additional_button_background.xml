<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="?attr/ChiliAdditionalButtonCornerRadius" />
            <solid android:color="?attr/ChiliAdditionalButtonBackgroundDisabled" />
            <stroke android:width="1dp" android:color="?attr/ChiliAdditionalButtonDisabledBorderColor" android:dashWidth="8dp" android:dashGap="8dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="?attr/ChiliAdditionalButtonCornerRadius" />
            <solid android:color="?attr/ChiliAdditionalButtonBackgroundActive" />
            <stroke android:width="1dp" android:color="?attr/ChiliAdditionalButtonBorderColor" android:dashWidth="8dp" android:dashGap="8dp" />
        </shape>
    </item>

</selector>
