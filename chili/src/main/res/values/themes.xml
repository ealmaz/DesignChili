<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseChiliDesignTheme" parent="Theme.AppCompat.DayNight.NoActionBar">


        <!-- Text appearance theme-->
        <item name="TextSizeH1">@dimen/text_64sp</item>
        <item name="TextSizeH2">@dimen/text_32sp</item>
        <item name="TextSizeH3">@dimen/text_28sp</item>
        <item name="TextSizeH4">@dimen/text_24sp</item>
        <item name="TextSizeH5">@dimen/text_20sp</item>
        <item name="TextSizeH6">@dimen/text_18sp</item>
        <item name="TextSizeH7">@dimen/text_16sp</item>
        <item name="TextSizeH8">@dimen/text_14sp</item>
        <item name="TextSizeH9">@dimen/text_12sp</item>
        <item name="TextSizeH10">@dimen/text_10sp</item>

        <item name="PrimaryTextColor">@color/black_5</item>
        <item name="SecondaryTextColor">@color/gray_1</item>
        <item name="MarkedTextColor">@color/black_1</item>
        <item name="ErrorTextColor">@color/red_1</item>

        <item name="PrimaryButtonTextColor">@color/white_1</item>
        <item name="SecondaryButtonTextColor">@color/blue_1</item>
        <item name="AdditionalButtonTextColor">@color/gray_1</item>
        <item name="ComponentButtonTextColor">@color/blue_1</item>

        <item name="RegularTextFont">@font/roboto_regular</item>
        <item name="BoldTextFont">@font/roboto_medium</item>
        <item name="ItalicTextFont">@font/roboto_italic</item>

        <item name="PrimaryButtonTextFont">@font/roboto_medium</item>
        <item name="SecondaryButtonTextFont">@font/roboto_medium</item>
        <item name="AdditionalButtonTextFont">@font/roboto_medium</item>
        <item name="ComponentButtonTextFont">@font/roboto_medium</item>

        <item name="PrimaryButtonTextSize">@dimen/text_14sp</item>
        <item name="SecondaryButtonTextSize">@dimen/text_14sp</item>
        <item name="AdditionalButtonTextSize">@dimen/text_14sp</item>
        <item name="ComponentButtonTextSize">@dimen/text_16sp</item>
        <!-- End text appearance theme-->


        <item name="CellViewBackground">@color/red_1</item>
        <item name="CellCornerRadius">40dp</item>


        <!-- Primary Button attributes -->
        <item name="PrimaryButtonBackgroundActive">@color/green_1</item>
        <item name="PrimaryButtonBackgroundPressed">@color/green_4</item>
        <item name="PrimaryButtonBackgroundDisabled">@color/green_3</item>
        <item name="PrimaryButtonCornerRadius">@dimen/radius_4dp</item>



        <!-- Secondary Button attributes -->
        <item name="SecondaryButtonBackgroundActive">@android:color/transparent</item>
        <item name="SecondaryButtonBackgroundPressed">@android:color/transparent</item>
        <item name="SecondaryButtonBackgroundDisabled">@android:color/transparent</item>
        <item name="SecondaryButtonCornerRadius">@dimen/radius_4dp</item>



        <!-- Additional Button attributes -->
        <item name="AdditionalButtonBackgroundActive">@android:color/transparent</item>
        <item name="AdditionalButtonBackgroundPressed">@color/gray_8</item>
        <item name="AdditionalButtonBackgroundDisabled">@android:color/transparent</item>
        <item name="AdditionalButtonCornerRadius">@dimen/radius_4dp</item>
        <item name="AdditionalButtonBorderColor">@color/gray_1</item>


        <!-- Component Button attributes -->
        <item name="ComponentButtonBackgroundActive">@android:color/transparent</item>
        <item name="ComponentButtonBackgroundPressed">@android:color/transparent</item>
        <item name="ComponentButtonBackgroundDisabled">@android:color/transparent</item>
        <item name="ComponentButtonCornerRadius">@dimen/radius_4dp</item>

