<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="?SecondaryButtonCornerRadius" />
            <solid
                android:color="?SecondaryButtonBackgroundDisabled"
                tools:color="@color/blue_1"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="?SecondaryButtonCornerRadius" />
            <solid
                android:color="?SecondaryButtonBackgroundPressed"
                tools:color="@color/blue_1"/>
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="?SecondaryButtonCornerRadius" />
            <solid
                android:color="?SecondaryButtonBackgroundActive"
                tools:color="@color/blue_1"/>
        </shape>
    </item>
</selector>