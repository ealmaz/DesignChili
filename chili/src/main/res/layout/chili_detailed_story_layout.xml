<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/leftTouchPanel"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/view_74dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.5"
        android:clickable="true"/>

    <FrameLayout
        android:id="@+id/rightTouchPanel"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/view_74dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.5"
        android:clickable="true"/>

    <FrameLayout
        android:id="@+id/contentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_1"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="22dp">

            <FrameLayout
                android:id="@+id/overlayLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foreground="@drawable/chili_shading">

                <ImageView
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:id="@+id/storyImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <FrameLayout
                    android:id="@+id/border_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/badge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/radius_14dp"
                        app:cardBackgroundColor="@color/magenta_1"
                        app:contentPadding="@dimen/padding_4dp"
                        android:layout_marginHorizontal="@dimen/padding_16dp"
                        android:layout_marginTop="28dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/chili_heart_icon"
                                android:layout_gravity="center"
                                android:layout_marginHorizontal="@dimen/padding_8dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white_1"
                                android:layout_gravity="center"
                                android:layout_marginEnd="@dimen/padding_8dp"
                                android:text="Для тебя"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <ImageView
                        android:id="@+id/btn_close"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/chili_white_ic_cancel_24dp"
                        android:layout_marginHorizontal="@dimen/padding_16dp"
                        android:layout_marginTop="34dp"
                        android:layout_gravity="end"/>

                </FrameLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/progressBarContainer"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:layout_marginHorizontal="@dimen/padding_16dp"
                    android:layout_marginTop="@dimen/padding_12dp">
                </androidx.constraintlayout.widget.ConstraintLayout>
            </FrameLayout>
            <LinearLayout
                android:orientation="vertical"
                android:gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white_1"
                    android:textAppearance="@style/Chili.H4.Primary.Bold"
                    android:layout_margin="@dimen/padding_16dp"/>

                <TextView
                    android:id="@+id/subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white_1"
                    android:textAppearance="@style/Chili.H7"
                    android:layout_marginBottom="36dp"
                    android:layout_marginHorizontal="@dimen/padding_16dp"/>

                <Button
                    android:id="@+id/btn_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Chili.ButtonStyle.Accent"
                    android:layout_marginHorizontal="@dimen/padding_16dp"
                    android:layout_marginBottom="@dimen/padding_16dp"
                    android:text="Детали"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>