<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <Button
            style="@style/ButtonStyle.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Primary button"
            android:layout_margin="@dimen/padding_16dp"/>

        <TextView
            android:text="More info"
            android:id="@+id/primaryButtonMore"
            android:layout_gravity="end"
            style="@style/ButtonStyle.Component"
            android:layout_margin="@dimen/padding_8dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_1_alpha_50"/>

        <Button
            android:text="Primary button disabled"
            style="@style/ButtonStyle.Primary"
            android:enabled="false"
            android:layout_margin="@dimen/padding_16dp"/>

        <TextView
            android:text="More info"
            android:layout_gravity="end"
            style="@style/ButtonStyle.Component"
            android:layout_margin="@dimen/padding_8dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_1_alpha_50"/>

        <Button
            android:text="Secondary button"
            style="@style/ButtonStyle.Secondary"
            android:layout_margin="@dimen/padding_16dp"/>

        <TextView
            android:text="More info"
            android:layout_gravity="end"
            style="@style/ButtonStyle.Component"
            android:layout_margin="@dimen/padding_8dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_1_alpha_50"/>

        <Button
            android:text="Secondary button disabled"
            style="@style/ButtonStyle.Secondary"
            android:enabled="false"
            android:layout_margin="@dimen/padding_16dp"/>

        <TextView
            android:text="More info"
            android:layout_gravity="end"
            style="@style/ButtonStyle.Component"
            android:layout_margin="@dimen/padding_8dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_1_alpha_50"/>

        <Button
            android:text="Additional button"
            style="@style/ButtonStyle.Additional"
            android:layout_margin="@dimen/padding_16dp"/>

        <TextView
            android:text="More info"
            android:layout_gravity="end"
            style="@style/ButtonStyle.Component"
            android:layout_margin="@dimen/padding_8dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_1_alpha_50"/>

        <Button
            android:text="Additional button disabled"
            style="@style/ButtonStyle.Additional"
            android:enabled="false"
            android:layout_margin="@dimen/padding_16dp"/>

        <TextView
            android:text="More info"
            android:layout_gravity="end"
            style="@style/ButtonStyle.Component"
            android:layout_margin="@dimen/padding_8dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_1_alpha_50"/>

        <TextView
            android:text="Component button"
            style="@style/ButtonStyle.Component"
            android:layout_margin="@dimen/padding_16dp"/>

        <TextView
            android:text="More info"
            android:layout_gravity="end"
            style="@style/ButtonStyle.Component"
            android:layout_margin="@dimen/padding_8dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_1_alpha_50"/>

        <TextView
            android:text="Component button disabled"
            style="@style/ButtonStyle.Component"
            android:enabled="false"
            android:layout_margin="@dimen/padding_16dp"/>

        <TextView
            android:text="More info"
            android:layout_gravity="end"
            style="@style/ButtonStyle.Component"
            android:layout_margin="@dimen/padding_8dp"/>

<!--        <View-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="1dp"-->
<!--            android:background="@color/gray_1_alpha_50"/>-->

    </LinearLayout>

</ScrollView>
