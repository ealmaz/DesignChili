<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?screenBackground">

    <Button
        android:id="@+id/simple_snackbar"
        android:text="Simple snackbar"
        style="@style/ButtonStyle.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_16dp"/>

    <Button
        android:id="@+id/success_snackbar"
        android:text="Success snackbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ButtonStyle.Primary"
        android:layout_margin="@dimen/padding_16dp"/>

    <Button
        android:id="@+id/warn_snackbar"
        android:text="Warning snackbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ButtonStyle.Primary"
        android:layout_margin="@dimen/padding_16dp"/>

    <Button
        android:id="@+id/load_snackbar"
        android:text="Loading snackbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ButtonStyle.Primary"
        android:layout_margin="@dimen/padding_16dp"/>

    <Button
        android:id="@+id/timer_snackbar"
        android:text="Timer snackbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ButtonStyle.Primary"
        android:layout_margin="@dimen/padding_16dp"/>

    <Button
        android:id="@+id/timer_action_snackbar"
        android:text="Timer + action snackbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ButtonStyle.Primary"
        android:layout_margin="@dimen/padding_16dp"/>

</LinearLayout>