<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <com.design.chili.view.input.BaseInputView
            android:id="@+id/field_1"
            android:text="Buttons"
            app:message="Meesage"
            app:actionButtonText="Action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_16dp"/>

        <com.design.chili.view.input.MaskedInputView
            android:id="@+id/field_2"
            android:text="Buttons"
            app:mask="+996 XXX XXX XXX"
            app:errorMessage="ErrorMesage"
            app:actionButtonText="Start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_16dp"/>

    </LinearLayout>

</ScrollView>