<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="?attr/ChiliScreenBackground"
    android:layout_height="match_parent"
    android:id="@+id/toor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/text"
            android:text="Text Appearances"
            style="@style/Chili.ButtonStyle.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_16dp"/>

        <Button
            android:id="@+id/buttons"
            android:text="Buttons"
            style="@style/Chili.ButtonStyle.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_16dp"/>

        <Button
            android:id="@+id/fileds"
            android:text="Input fields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Chili.ButtonStyle.Primary"
            android:layout_margin="@dimen/padding_16dp"/>

        <Button
            android:id="@+id/cards"
            android:text="Cards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Chili.ButtonStyle.Primary"
            android:layout_margin="@dimen/padding_16dp"/>

        <Button
            android:id="@+id/cells_new"
            android:text="Cells ALL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Chili.ButtonStyle.Primary"
            android:layout_margin="@dimen/padding_16dp"/>

        <Button
            android:id="@+id/snackbar"
            android:text="Snackbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Chili.ButtonStyle.Primary"
            android:layout_margin="@dimen/padding_16dp"/>

        <Button
            android:id="@+id/common"
            android:text="Common"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Chili.ButtonStyle.Primary"
            android:layout_margin="@dimen/padding_16dp"/>

        <Button
            android:id="@+id/bottom_sheet"
            android:text="Bottom sheets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Chili.ButtonStyle.Primary"
            android:layout_margin="@dimen/padding_16dp"/>

        <Button
            android:id="@+id/toolbars"
            android:text="Toolbars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Chili.ButtonStyle.Primary"
            android:layout_margin="@dimen/padding_16dp"/>

        <Button
            android:id="@+id/pickers"
            android:text="Pickers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Chili.ButtonStyle.Primary"
            android:layout_margin="@dimen/padding_16dp"/>

    </LinearLayout>

</ScrollView>
