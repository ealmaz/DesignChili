<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="?screenBackground"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <com.design.chili.view.navigation_components.ChiliToolbar
            android:id="@+id/toolbar1"
            app:title="Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_16dp"/>

        <com.design.chili.view.navigation_components.ChiliToolbar
            android:id="@+id/toolbar2"
            app:title="Title + additional text"
            app:additionalText="SomeAdditionalText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_16dp"/>

        <com.design.chili.view.navigation_components.ChiliToolbar
            android:id="@+id/toolbar3"
            app:title="Title + End Icon"
            app:endIcon="@drawable/ic_darkmode_false_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_16dp"/>


        <com.design.chili.view.navigation_components.ChiliToolbar
            android:id="@+id/toolbar4"
            app:title="title + Additional + icon"
            app:endIcon="@drawable/ic_combined_shape__2_"
            app:additionalText="additionalText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_16dp"/>


        <com.design.chili.view.navigation_components.ChiliToolbar
            android:id="@+id/toolbar5"
            app:title="title + EndIcon +custom navigationIcon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:endIcon="@drawable/ic_darkmode_false_"
            android:layout_marginTop="@dimen/padding_16dp"/>

        <com.design.chili.view.navigation_components.ChiliToolbar
            android:id="@+id/toolbar6"
            app:title="Tranparant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:isDividerVisible="false"
            app:isTransparent="true"
            android:layout_marginTop="@dimen/padding_16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transparent toolbar ^"/>

    </LinearLayout>

</ScrollView>